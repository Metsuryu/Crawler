<body data-ng-app="Crawler" data-ng-controller="ctrl">
  <h1 id="titleH1" align="center" style="font-family: Times">Crawler</h1>
  <hr>


<!--
Controls 

TODO: Remove modify and delete buttons.
Modify automatically entries with the same name if the score is higher than the previous one, otherwise tell user to choose another name.

-->
<div class="controls">
 <form action="/" method="POST">
  <b>Name:</b><br>
  <input id="username" type="text" name="username"><br>
  <b>Comment:</b><br>
  <input id="comment" type="text" name="comment"><br>
  <b>Score:</b><br>
  <input disabled id="score" type="number" name="score" value=0><br>
  <br>
  <button class="btn btn-primary" disabled id="addBTN" name="addBTN">Submit Score</button>
</form> 
<br>
<button class="btn btn-primary" id="aboutGame" name="aboutGameBTN">About the game</button>

<div class="messageBox">
  <span class="closebtn all" id="closeAll">Dismiss all &times;</span><br>
  <span id="messageBox"></span>
</div>
</div>

<center>
<div id="sketch-holder">
<!-- Canvas is here -->
</div>
</center>


<!--
Score table
-->
<div id="scoreTable">
<h1 align="center" style="font-family: Times">Highscores</h1>
<br>

<center>
<table id="entriesTable">
  <tr>
    <th>Username</th>
    <th>Comment</th>
    <th>Score</th>

<!--TODO: sorting and limit number of entries per page-->
<tr class="entry" data-ng-repeat="entry in entrylist track by $index" data-ng-click="testID($event)" id="{{entry.id}}">
<td> {{entry.name}} </td> <td> {{entry.comm}} </td> <td> {{entry.score}} </td>
</tr>

</table>
</center>
</div>

<div id="footerBar"><span id="about">About</span> &zwnj; &zwnj; &zwnj; &zwnj; </div>
</body>
</html>