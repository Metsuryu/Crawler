<head>
	<title>Crawler</title>
  <!-- Metadata -->
  <meta charset="utf-8"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <meta name="robots" content="index,nofollow"/>
  <meta name="author" content="Mario Cannistrà"/>
  <link rel="icon" type="image/png" href="images/favicon.ico"/>
  <meta name="description" content="Crawler - a Snake clone written in JavaScript"/>
  <meta name="keywords" content="HTML,HTML5,CSS,CSS3,JavaScript,JS,Jquery,AngularJS,Angular,node,nodejs,node.js,MEAN,stack,mean stack,mongo,mongodb,database,express,express.js,Snake,Crawler,Game,Videogame,Free,Score,Highscore,8-bit,pixel,pixel graphics, pixel-graphics"/>

	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="css/style.css" />
  <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
  <script type="text/javascript" src="js/cinema.min.js"></script>
  <script type="text/javascript" src="js/angular.min.js"></script>
  <script type="text/javascript" src="js/translation.js"></script>
  <script type="text/javascript" src="js/main.js"></script>
  <script src="js/p5/p5.min.js" type="text/javascript"></script>
  <script src="js/p5/p5.dom.min.js" type="text/javascript"></script>
  <script src="js/p5/p5.sound.min.js" type="text/javascript"></script>
  <script src="js/crawler/sketch.js" type="text/javascript"></script>
  <script src="js/crawler/crawler.js" type="text/javascript"></script>
  <script src="js/GoogleAnalytics.js" type="text/javascript"></script> 
</head>
<body data-ng-app="Crawler" data-ng-controller="ctrl">

<div id="containerTop">

<img id="titleLogo" src="images/CrawlerLogo/logoTr.png">

<div id="buttons">
  <input id="English" type="button" class="btn btn-primary" title="Translates this page to English." value="English" onclick="toEnglish();"/>
  <input id="Italiano" type="button" class="btn btn-primary" title="Traduce questa pagina in Italiano." value="Italiano" onclick="toItalian();"/>
</div>

</div>

<!-- Controls -->
<div class="controls">
 <form action="/" method="POST">
  <b id="nameLabel">Name:</b><br>
  <input id="username" type="text" name="username" maxlength="50"><br>
  <b id="commentLabel">Comment:</b><br>
  <input id="comment" type="text" name="comment" maxlength="50"><br>
  <b id="scoreLabel">Score:</b><br>
  <input disabled id="score" type="number" name="score" value=0><br>
  <br>
  <button class="btn btn-primary" disabled id="addBTN" name="addBTN">Submit score</button>
</form> 
<br>

<button class="btn btn-primary" id="about" name="aboutBTN">About</button>
<br><br>

<button class="btn btn-primary" id="aboutGame" name="aboutGameBTN">Game guide</button>
<br><br>

<button class="btn btn-primary" id="showHS" name="showHSBTN">Show highscores</button>
<br>
<div class="messageBox">
  <span class="closebtn all" id="closeAll">Dismiss all &times;</span><br>
  <span id="messageBox"></span>
</div>
</div>

<center>
<div id="sketch-holder">
<!-- Canvas is here -->
</div>
</center>


<!--Score table-->
<div id="scoreTable">
<h1 align="center" style="font-family: Times" id="highscoresLabel">Highscores</h1>
<br>

<center>
<table id="entriesTable">
  <tr>
    <th> <span id="nameTableLabel">Name </span> <input id="searchField" type="text" name="searchTable" placeholder="&#128269; Search" data-ng-model="searchNG"/></th> 
    <th id="commentTableLabel">Comment</th>
    <th id="scoreTableLabel">Score</th>

<!--Sort dynamically and limit number of entries per page, sorted server-side-->
<tr class="entry" data-ng-repeat="entry in entrylist | filter:searchNG">
<td> {{entry.name}} </td> <td> {{entry.comm}} </td> <td> {{entry.score}} </td>
</tr>

</table>

<div id="scorePages">
<!--Buttons to other pages of the highscore added dynamically-->
</div>

</center>
</div>

</body>
</html>